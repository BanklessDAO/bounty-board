{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noErrorTruncation": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "mongo-cursor-paginate.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "../../mongo/abc.test.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next", 
    "out",
    "dist",
  ]
}