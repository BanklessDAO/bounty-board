{
  "name": "@bounty-board/react-app",
  "version": "1.0.0-beta3",
  "homepage": ".",
  "description": "This web app displays the bounties that are available for DAO members to claim.",
  "repository": "https://github.com/BanklessDAO/bounty-board",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BanklessDAO/bounty-board/issues"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "scripts": {
    "dev": "next dev",
    "dev:lint": "yarn lint && next dev",
    "build": "next build",
    "start": "next start",
    "build:qa": "env-cmd -f .env.qa yarn build",
    "build:prod": "env-cmd -f .env.prod yarn build",
    "prebuild": "yarn lint",
    "type-check": "tsc -p .",
    "export": "next export",
    "lint": "eslint src --ext js,jsx,ts,tsx",
    "format": "eslint src --ext js,jsx,ts,tsx --fix",
    "test:unit": "TESTING=true jest packages/react-app/tests/unit",
    "test:cov": "TESTING=true MONGODB_URI=mongodb://localhost:27017/test_bountyboard jest --coverage",
    "test:integration": "TESTING=true MONGODB_URI=mongodb://localhost:27017/test_bountyboard jest --detectOpenHandles packages/react-app/tests/integration"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "bash -c tsc -p .",
      "yarn format"
    ]
  },
  "dependencies": {
    "@chakra-ui/react": "^1.6.5",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.3.0",
    "@fontsource/lexend": "^4.5.0",
    "@hookform/resolvers": "^2.7.1",
    "@netlify/plugin-nextjs": "^3.8.0",
    "@types/mongoose-paginate-v2": "^1.4.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
    "axios": "^0.24.0",
    "env-cmd": "^10.1.0",
    "follow-redirects": "^1.14.7",
    "framer-motion": "^4.1.17",
    "lint-staged": "^11.0.0",
    "mongo-cursor-pagination": "^7.6.1",
    "mongoose": "^5.13.4",
    "next": "^11.0.0",
    "next-auth": "4.0.0-next.26",
    "next-seo": "^4.26.0",
    "node-mocks-http": "^1.11.0",
    "nprogress": "^0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.12.2",
    "react-icons": "^4.2.0",
    "shelljs": "^0.8.5",
    "swr": "^0.5.6",
    "yup": "^0.32.11"
  },
  "engines": {
    "yarn": "1.x",
    "node": ">=14.x.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@types/enzyme": "^3.10.10",
    "@types/jest": "^27.0.2",
    "@types/next-auth": "^3.15.0",
    "@types/node": "^16.4.7",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
    "discord-api-types": "^0.24.0",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^7.30.0",
    "eslint-config-next": "^11.0.1",
    "jest": "^27.3.1",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "react-test-utils": "^0.0.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.3.5"
  }
}
